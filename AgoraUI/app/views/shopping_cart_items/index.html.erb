<h1>Listing shopping_cart_items</h1>

<table>
  <thead>
    <tr>
      <th>Shopping cart</th>
      <th>Item</th>
      <th>Item name</th>
      <th>Item desc</th>
      <th>Item price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_cart_items.each do |shopping_cart_item| %>
      <tr>
        <td><%= shopping_cart_item.shopping_cart_id %></td>
        <td><%= shopping_cart_item.item_id %></td>
        <td><%= shopping_cart_item.item_name %></td>
        <td><%= shopping_cart_item.item_desc %></td>
        <td><%= shopping_cart_item.item_price %></td>
        <td><%= link_to 'Show', shopping_cart_item %></td>
        <td><%= link_to 'Edit', edit_shopping_cart_item_path(shopping_cart_item) %></td>
        <td><%= link_to 'Destroy', shopping_cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

