<h1>Listing transactions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Item</th>
      <th>Description</th>
      <th>Total Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |t| %>
      <% transaction = t[0] %>
      <% auction = t[1] %>
      <tr>
        <td><%= transaction.trans_date %></td>
        <td><%= link_to "#{auction.item_name}", "transactions/#{transaction.transaction_id}" %></td>
        <td><%= auction.item_desc %></td>
        <td><%= transaction.total_cost %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

