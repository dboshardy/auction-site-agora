<h1>Listing flags</h1>

<table>
  <thead>
    <tr>
      <th>Flag type</th>
      <th>Auction</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each_with_index do |flag, index| %>
      <tr>
        <td><%= flag.flag_type %></td> 
        <td><%= link_to "See flagged auction", "/auctions/#{@auctions[index]}" %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flag', new_flag_path %>
