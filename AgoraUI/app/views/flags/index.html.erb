<h1>Listing flags</h1>

<table>
  <thead>
    <tr>
      <th>Flag type</th>
      <th>Auction</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <% flag = flag[0] %>
        <% auction = flag[1] %>
        <td><%= flag.flag_type %></td> 
        <td><%= link_to 'See Auction', "auctions/#{auction.auction_id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flag', new_flag_path %>
