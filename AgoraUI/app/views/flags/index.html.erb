<h1>Listing flags</h1>

<table>
  <thead>
    <tr>
      <th>Flag type</th>
      <th>Flag description</th>
      <th>Item</th>
      <th>Item</th>
      <th>Item Description</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <% flag = flag[0] %>
        <% auction = flag[1] %>
        <td><%= flag.flag_type %></td>
        <td><%= flag.flag_description %></td>
        <td><%= auction.auction_id %></td>
        <td><%= auction.item_name %></td>
        <td><%= auction.item_description %></td>
        <td><%= link_to 'Show', flag %></td>
        <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
        <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flag', new_flag_path %>
