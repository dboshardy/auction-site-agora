<% if session[:is_admin] %>
  <%= link_to "ADMIN: Suspend User", "/users/#{params[:id]}/suspend", data: { confirm: 'Are you sure you want to suspend this user?' } %><br>
<% elsif session[:user_id] == params[:id].to_i %>
	<%= link_to 'Edit User', "/users/#{session[:user_id]}/edit" %> | 
	<%= link_to 'Delete User', "/users/#{session[:user_id]}", method: :delete %> | 
    <%= link_to 'Suspend Account', "/users/#{params[:id]}/suspend", data: { confirm: 'Are you sure you want to suspend your account? You will need to contact customer service (they are VERY slow) to reactivate your account' } %> <br>	<br> 
<% end %>  

